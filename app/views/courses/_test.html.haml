- model_class = Test
- content_for :header do
  =t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = test.title
%p
  %strong= model_class.human_attribute_name(:short) + ':'
  %br
  = test.short
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = test.state

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tests_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_test_path(test), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), test_path(test), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
