= form_for @answer, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :correct, :class => 'control-label'
    .controls
      = f.text_field :correct, :class => 'text_field'
  .control-group
    = f.label :question_id, :class => 'control-label'
    .controls
      = f.text_field :question_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), answers_path, :class => 'btn'
