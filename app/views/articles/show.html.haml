- model_class = Article
- content_for :header do
  =t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @article.title
%p
  %strong= model_class.human_attribute_name(:short) + ':'
  %br
  = @article.short
%p
  %strong= model_class.human_attribute_name(:full) + ':'
  %br
  = @article.full
%p
  %strong= model_class.human_attribute_name(:image_url) + ':'
  %br
  = @article.image_url
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @article.state
%p
  %strong= model_class.human_attribute_name(:course_id) + ':'
  %br
  = @article.course_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), articles_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_article_path(@article), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), article_path(@article), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
