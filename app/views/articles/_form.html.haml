= form_for @article, :html => { :class => 'form-horizontal', :multipart => true } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :short, :class => 'control-label'
    .controls
      = f.text_area :short, :class => 'text_field wysihtml5', :rows => "10"
  .control-group
    = f.label :full, :class => 'control-label'
    .controls
      = f.text_area :full, :class => 'text_field wysihtml5', :rows => "10"
  .control-group
    = f.label :state, :class => 'control-label'
    .controls
      / = f.text_field :state, :class => 'text_field'
      = f.select :state, ['draft', 'published']
  .control-group
    = f.label :course_id, :class => 'control-label'
    .controls
      /= f.text_field :course_id, :class => 'text_field'
      = f.collection_select :course_id, Course.all, :id, :title
  .control-group
    = f.label :picture, :class => 'control-label'
    .controls
      = f.file_field :picture
      
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), articles_path, :class => 'btn'
