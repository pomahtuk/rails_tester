- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:username) + ':'
  %br
  = @user.username
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @user.email
%p
  %strong= model_class.human_attribute_name(:crypted_password) + ':'
  %br
  = @user.crypted_password
%p
  %strong= model_class.human_attribute_name(:salt) + ':'
  %br
  = @user.salt
%p
  %strong= model_class.human_attribute_name(:remember_me_token) + ':'
  %br
  = @user.remember_me_token
%p
  %strong= model_class.human_attribute_name(:remember_me_token_expires_at) + ':'
  %br
  = @user.remember_me_token_expires_at
%p
  %strong= model_class.human_attribute_name(:reset_password_token) + ':'
  %br
  = @user.reset_password_token
%p
  %strong= model_class.human_attribute_name(:reset_password_token_expires_at) + ':'
  %br
  = @user.reset_password_token_expires_at
%p
  %strong= model_class.human_attribute_name(:reset_password_email_sent_at) + ':'
  %br
  = @user.reset_password_email_sent_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), users_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(@user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
