- model_class = Test
- content_for :header do
  =t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human, :default => "Edit #{model_class.model_name.human}")

- content_for :breadcrumbs do
  #breadcrumb
    = link_to '/' do
      %i.icon-home
      Home
    = link_to tests_url do
      %i.icon-file
      Tests
    = link_to '#' do
      %i.icon-edit
      Edit

- unless !!params[:remote]
  .widget-box
    .widget-title
      %h5 Edit test
    .widget-content.nopadding
      = render :partial => "form"
- else
  = render :partial => "form"
