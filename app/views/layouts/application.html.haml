!!!5
%html{:lang => "en"}
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "RailsTest"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    /%link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    /%link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    /%link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    /%link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    /%link(href="favicon.ico" rel="shortcut icon")

  %body
    #header
      %h1
        %a{:href => "/"} Rails Test Admin
    / #search
    /   %input{:placeholder => "Search here...", :type => "text"}/
    /   %button.tip-right{:title => "Search", :type => "submit"}
    /     %i.icon-search.icon-white
    #user-nav.navbar.navbar-inverse
      %ul.nav.btn-group
        - if current_user
          %li.btn.btn-inverse
            %a{:href => "#", :title => ""}
              %i.icon.icon-user
              %span.text 
                = current_user.username
          %li.btn.btn-inverse
            = link_to logout_path do
              %i.icon.icon-share-alt
              %span.text Logout
        - else
          %li.btn.btn-inverse
            = link_to signup_path do
              %i.icon.icon-user
              %span.text 
                Sign up
          %li.btn.btn-inverse
            = link_to login_path do
              %i.icon.icon-share-alt
              %span.text 
                Log in
    #sidebar{:class => "#{controller_name}"}
      %a.visible-phone{:href => "#"}
        %i.icon.icon-pencil
        Interface elements
      %ul
        %li.welcome
          %a{:href => "/"}
            %i.icon.icon-home
            %span Dashboard
        %li.users
          = link_to "/admin/users" do
            %i.icon.icon-user
            %span Users
        %li.categories
          = link_to "/admin/categories" do
            %i.icon.icon-folder-open
            %span Categories
        %li.courses
          = link_to "/admin/courses" do
            %i.icon.icon-book
            %span Courses
        %li.articles
          = link_to "/articles" do
            %i.icon-file
            %span Articles
        %li.tests
          = link_to "/tests" do
            %i.icon-th-list
            %span Tests
    #content
      #content-header
        %h1 
          = yield :header
      = yield :breadcrumbs
      .container-fluid
        .row-fluid
          - flash.each do |name, msg|
            .span12
              .alert{:class => "alert-#{name}"}
                %button.close{"data-dismiss" => "alert", :type => "button"} ×
                = msg
        .row-fluid
          = yield
        .row-fluid
          #footer.span12
            2012 © company
    
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
